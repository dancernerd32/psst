<ul>
  <% if @users %>
    <% @users.each do |user| %>
      <li>
        <%= "#{user.first_name} #{user.last_name} - #{user.username}" %>
        <% if !current_user.friends.include?(user) %>
          <%= link_to("Add #{user.username} as a friend",
          friendships_path(friend_id: user.id), method: :post) %>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
